            <div className="flex-1">
              <p
                className="text-base leading-relaxed"
                style={{
                  color: "#555555",
                  lineHeight: "1.6",
                }}
              >
                {member.description}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  )
}





