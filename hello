photoCaroseul.js
import React, { useState } from "react"

export default function PhotoCarousel() {
  const companyPhotos = [
    { id: 1, src: "/placeholder.svg", alt: "Company headquarters", caption: "Our modern headquarters in downtown" },
    { id: 2, src: "/placeholder.svg", alt: "Team building event", caption: "Annual team building retreat" },
    { id: 3, src: "/placeholder.svg", alt: "Product launch", caption: "Our latest product launch event" },
    { id: 4, src: "/placeholder.svg", alt: "Community service", caption: "Giving back to our community" },
    { id: 5, src: "/placeholder.svg", alt: "Innovation lab", caption: "Where our best ideas come to life" },
  ]

  const [activeIndex, setActiveIndex] = useState(0)

  const handlePrev = () => {
    setActiveIndex((prev) => (prev === 0 ? companyPhotos.length - 1 : prev - 1))
  }

  const handleNext = () => {
    setActiveIndex((prev) => (prev === companyPhotos.length - 1 ? 0 : prev + 1))
  }

  return (
    <div className="photo-carousel position-relative">
      <div className="carousel slide shadow rounded overflow-hidden">
        <div className="carousel-inner">
          {companyPhotos.map((photo, index) => (
            <div key={photo.id} className={`carousel-item ${index === activeIndex ? "active" : ""}`}>
              <img
                src={photo.src}
                alt={photo.alt}
                className="d-block w-100"
                style={{ height: "500px", objectFit: "cover" }}
              />
              <div className="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded py-2">
                <h5>{photo.alt}</h5>
                <p>{photo.caption}</p>
              </div>
            </div>
          ))}
        </div>
        <button className="carousel-control-prev" type="button" onClick={handlePrev}>
          <span className="carousel-control-prev-icon"></span>
        </button>
        <button className="carousel-control-next" type="button" onClick={handleNext}>
          <span className="carousel-control-next-icon"></span>
        </button>
      </div>

      <div className="carousel-indicators mt-3 d-flex justify-content-center">
        {companyPhotos.map((_, index) => (
          <button
            key={index}
            type="button"
            className={`bg-primary ${index === activeIndex ? "active" : ""}`}
            onClick={() => setActiveIndex(index)}
          ></button>
        ))}
      </div>
    </div>
  )
}


global.css
:root {
  --primary-color: #0d6efd;
  --secondary-color: #6c757d;
  --dark-color: #212529;
  --light-color: #f8f9fa;
}

body {
  background-color: #f8f9fa;
}

.leadership-card {
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.leadership-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
}

.carousel-item img {
  height: 500px;
  object-fit: cover;
}

.carousel-indicators button {
  width: 12px !important;
  height: 12px !important;
  border-radius: 50%;
  background-color: var(--primary-color);
  opacity: 0.5;
  transition: opacity 0.3s ease;
  margin: 0 5px;
}

.carousel-indicators button.active {
  opacity: 1;
}

.photo-carousel {
  margin-bottom: 60px;
}

@media (max-width: 768px) {
  .carousel-item img {
    height: 300px;
  }
}
