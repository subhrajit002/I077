                    <div className="input-group w-50 shadow-sm rounded-pill">
                        <input type="text" className="form-control rounded-start-pill" placeholder="Job title or keyword" />
                        <input type="text" className="form-control" placeholder="Location" />
                        <button className="btn btn-success rounded-end-pill px-4">Search</button>
                    </div>
                </div>

                {/* One Platform Many Solutions */}
                <div className="bg-light py-5 mb-5 rounded">
                    <div className="container">
                        <div className="d-flex justify-content-between align-items-center mb-4">
                            <h4 className="fw-bold">One platform Many Solutions</h4>
                            <a href="#" className="text-primary fw-bold text-decoration-none">See All Platform</a>
                        </div>

                        {/* Category Buttons */}
                        <div className="row g-3">
                            {categories.map((item, index) => (
                                <div className="col-6 col-md-3" key={index}>
                                    <div
                                        className={`d-flex align-items-center justify-content-between bg-white shadow-sm rounded-pill px-3 py-2 ${selectedCategory === item.name ? 'border border-primary' : ''}`}
                                        style={{ cursor: "pointer" }}
                                        onClick={() => setSelectedCategory(item.name)}
                                    >
                                        <i className={`bi ${item.icon} text-primary fs-5`}></i>
                                        <div className="ms-2 flex-grow-1">
                                            <h6 className="mb-0">{item.name}</h6>
