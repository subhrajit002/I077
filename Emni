import React, { useState } from "react";
import "bootstrap/dist/css/bootstrap.min.css";
import "bootstrap-icons/font/bootstrap-icons.css";

const Homepage = () => {
    // Job Data
    const allJobs = [
        { id: 1, title: "Senior UI Designer", company: "Microsoft", salary: "$20K", type: "Full-time", location: "Glendale, CA", category: "UI/UX Design" },
        { id: 2, title: "Product Designer", company: "Behance", salary: "$25K", type: "Remote", location: "Andover, MA", category: "UI/UX Design" },
        { id: 3, title: "Marketing Officer", company: "Mailchimp", salary: "$15K", type: "Full-time", location: "Weston, MA", category: "Marketing" },
        { id: 4, title: "Frontend Developer", company: "Google", salary: "$30K", type: "Full-time", location: "San Francisco, CA", category: "Development" },
        { id: 5, title: "Business Analyst", company: "IBM", salary: "$18K", type: "Full-time", location: "New York, NY", category: "Business" },
        { id: 6, title: "Finance Manager", company: "Deloitte", salary: "$28K", type: "Full-time", location: "Chicago, IL", category: "Finance" },
    ];

    // Categories
    const categories = [
        { name: "Marketing", icon: "bi-megaphone" },
        { name: "Development", icon: "bi-code-slash" },
